@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Durum</th>
        <th>Kategori</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.UrunID</td>
    <td>@item.UrunAd</td>
    <td>@item.Marka</td>
    <td>@item.Stok</td>
    <td>@item.AlisFiyat</td>
    <td>@item.SatisFiyat</td>
    <td>@item.Durum</td>
    <td>@item.Kategori.KategoriAd</td>
    <td>@item.UrunGorsel</td>
    <td>
        <a href="/Urun/UrunSil/@item.UrunID" class="btn btn-danger">Sil</a>
    </td>
    <td>
        <a href="/Urun/UrunGetir/@item.UrunID" class="btn btn-warning">Güncelle</a>
    </td>
</tr>

    }
</table>
<a href="/Urun/UrunEkle" class="btn btn-info">Yeni Ürün Ekle</a>